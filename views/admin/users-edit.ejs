<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User - SmartAC</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/admin/dashboard">SmartAC Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/users">Manage Users</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="user-avatar me-2"><%= user.name.charAt(0) %></span>
                            <%= user.name %>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/admin/profile">Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="dashboard-header">
        <div class="container">
            <div class="d-flex align-items-center">
                <a href="/admin/users" class="btn btn-outline-primary me-3">
                    <i class="bi bi-arrow-left"></i> Back to Users
                </a>
                <div>
                    <h1 class="mb-0">Edit User</h1>
                    <p class="lead">Update user information for <%= userToEdit.name %></p>
                </div>
            </div>
        </div>
    </div>

    <div class="container mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">User Information</h4>
                    </div>
                    <div class="card-body">
                        <form action="/admin/users/<%= userToEdit.id %>/edit" method="POST">
                            <div class="mb-3">
                                <label for="name" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="name" name="name" value="<%= userToEdit.name %>" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" name="username" value="<%= userToEdit.username %>" required>
                                <div class="form-text">Username must be unique and will be used for login.</div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Leave blank to keep current password">
                                <div class="form-text">Leave blank to keep the current password.</div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="email" class="form-label">Email (Optional)</label>
                                <input type="email" class="form-control" id="email" name="email" value="<%= userToEdit.email || '' %>">
                            </div>
                            
                            <div class="mb-4">
                                <label class="form-label">User Role</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="role" id="roleAdmin" value="admin" <%= userToEdit.role === 'admin' ? 'checked' : '' %>>
                                    <label class="form-check-label" for="roleAdmin">
                                        <span class="badge bg-danger me-2">Admin</span> Can manage all users and system settings
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="role" id="roleTeacher" value="teacher" <%= userToEdit.role === 'teacher' ? 'checked' : '' %>>
                                    <label class="form-check-label" for="roleTeacher">
                                        <span class="badge bg-info me-2">Teacher</span> Can create sessions and teach students
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="role" id="roleStudent" value="student" <%= userToEdit.role === 'student' ? 'checked' : '' %>>
                                    <label class="form-check-label" for="roleStudent">
                                        <span class="badge bg-success me-2">Student</span> Can join sessions and access learning materials
                                    </label>
                                </div>
                            </div>
                            
                            <div id="studentFields" class="mb-3 <%= userToEdit.role === 'student' ? '' : 'd-none' %>">
                                <label for="studentId" class="form-label">Student ID</label>
                                <input type="text" class="form-control" id="studentId" name="studentId" value="<%= userToEdit.studentId || '' %>">
                            </div>
                            
                            <div id="teacherFields" class="mb-3 <%= userToEdit.role === 'teacher' ? '' : 'd-none' %>">
                                <label for="specialization" class="form-label">Specialization</label>
                                <input type="text" class="form-control" id="specialization" name="specialization" value="<%= userToEdit.specialization || 'Car Air Conditioning Systems' %>">
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Update User</button>
                                <a href="/admin/users" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-dark text-white py-4 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>SmartAC</h5>
                    <p>A project to help TVET students understand more about practical car AC maintenance and repair.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>&copy; 2025 SmartAC. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const roleStudentRadio = document.getElementById('roleStudent');
            const roleTeacherRadio = document.getElementById('roleTeacher');
            const roleAdminRadio = document.getElementById('roleAdmin');
            const studentFields = document.getElementById('studentFields');
            const teacherFields = document.getElementById('teacherFields');
            
            function updateFields() {
                if (roleStudentRadio.checked) {
                    studentFields.classList.remove('d-none');
                    teacherFields.classList.add('d-none');
                } else if (roleTeacherRadio.checked) {
                    studentFields.classList.add('d-none');
                    teacherFields.classList.remove('d-none');
                } else if (roleAdminRadio.checked) {
                    studentFields.classList.add('d-none');
                    teacherFields.classList.add('d-none');
                }
            }
            
            roleStudentRadio.addEventListener('change', updateFields);
            roleTeacherRadio.addEventListener('change', updateFields);
            roleAdminRadio.addEventListener('change', updateFields);
        });
    </script>
</body>
</html>
