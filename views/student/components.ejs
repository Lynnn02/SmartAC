        <div class="row mt-5">
            <div class="col-12">
                <h2 class="mb-4">Components of Car AC</h2>
                <p>Components Asas Aircon kenderaan.</p>
            </div>
        </div>

        <!-- Core Components Section -->
        <div class="row">
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="modern-card pink-card">
                    <div class="card-body">
                        <div class="card-icon">
                            <i class="bi bi-gear-wide-connected"></i>
                        </div>
                        <h5 class="card-title">1. Compressor</h5>
                        <p class="card-text">Pumps and pressurizes the refrigerant.</p>
                        <div class="mt-3">
                            <a href="/student/component/compressor" class="btn btn-light" disabled>Under Development</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="modern-card teal-card">
                    <div class="card-body">
                        <div class="card-icon">
                            <i class="bi bi-wind"></i>
                        </div>
                        <h5 class="card-title">2. Condenser</h5>
                        <p class="card-text">Releases heat from the refrigerant.</p>
                        <div class="mt-3">
                            <a href="/student/component/condenser" class="btn btn-light" disabled>Under Development</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="modern-card purple-card">
                    <div class="card-body">
                        <div class="card-icon">
                            <i class="bi bi-thermometer-half"></i>
                        </div>
                        <h5 class="card-title">3. TXV</h5>
                        <p class="card-text">Thermal Expansion Valve controls refrigerant flow.</p>
                        <div class="mt-3">
                            <a href="/student/component/txv" class="btn btn-light" data-model="TXV.glb">View in 3D</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="modern-card blue-card">
                    <div class="card-body">
                        <div class="card-icon">
                            <i class="bi bi-snow"></i>
                        </div>
                        <h5 class="card-title">4. Cooling Coil</h5>
                        <p class="card-text">Absorbs heat from the cabin air.</p>
                        <div class="mt-3">
                            <a href="/student/component/cooling-coil" class="btn btn-light" disabled>Under Development</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm component-card">
                    <div class="card-body text-center">
                        <h5 class="card-title">5. Receiver Drier</h5>
                        <p class="card-text">Removes moisture from the refrigerant.</p>
                        <a href="/student/component/receiver-drier" class="btn btn-primary" data-model="ReceiverDrier.glb">View in 3D</a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm component-card">
                    <div class="card-body text-center">
