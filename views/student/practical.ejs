    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Function to adjust UI for mobile devices
            function adjustForMobileDevices() {
                if (window.innerWidth < 768) {
                    // Adjust step headers for better mobile display
                    document.querySelectorAll('.step-header').forEach(header => {
                        header.style.flexDirection = 'column';
                        header.style.alignItems = 'flex-start';
                    });
                } else {
                    // Reset for larger screens
                    document.querySelectorAll('.step-header').forEach(header => {
                        header.style.flexDirection = 'row';
                        header.style.alignItems = 'center';
                    });
                }
            }
            
            // Function to apply interactive classes to elements
            function applyInteractiveClasses() {
                // Add hover effects to cards
                document.querySelectorAll('.card:not(.interactive-card)').forEach(card => {
                    card.classList.add('interactive-card');
                });
                
                // Add interactive effects to buttons
                document.querySelectorAll('button:not(.interactive-button)').forEach(button => {
                    button.classList.add('interactive-button');
                });
            }
            // AR Visualization functionality
            const arContainer = document.getElementById('ar-container');
            const arInstructions = document.getElementById('ar-instructions');
            const arStepTitle = document.getElementById('ar-step-title');
            const arStepNumber = document.getElementById('ar-step-number');
            const closeArBtn = document.getElementById('close-ar-btn');
            const viewArBtns = document.querySelectorAll('.view-ar-btn');
            const prevArStepBtn = document.getElementById('prev-ar-step-btn');
            const nextArStepBtn = document.getElementById('next-ar-step-btn');
            
            let currentStep = 1;
            const totalSteps = document.querySelectorAll('.practical-step').length;
            
            // Function to update progress bar
            function updateProgressBar(completedSteps) {
                const progressPercentage = (completedSteps / totalSteps) * 100;
                const progressBar = document.getElementById('progressBar');
                if (progressBar) {
                    progressBar.style.width = `${progressPercentage}%`;
                    progressBar.setAttribute('aria-valuenow', progressPercentage);
                }
            }
            
            // Function to show AR visualization
            function showArVisualization(step) {
                arStepTitle.textContent = `Langkah ${step} AR Visualization`;
                arStepNumber.textContent = step;
                arContainer.classList.remove('d-none');
                arInstructions.classList.add('d-none');
                
                // Update prev/next buttons
                prevArStepBtn.disabled = (step === 1);
                nextArStepBtn.disabled = (step === totalSteps);
            }
            
            // Initialize progress bar
            updateProgressBar(0);
            
            // Style step numbers
            document.querySelectorAll('.step-number').forEach(stepNumber => {
                stepNumber.classList.add('bg-primary', 'text-white', 'rounded-circle', 'd-flex', 'align-items-center', 'justify-content-center');
                stepNumber.style.width = '30px';
                stepNumber.style.height = '30px';
                stepNumber.style.fontSize = '14px';
            });
            
            // Add spacing between practical steps
            document.querySelectorAll('.practical-step').forEach(step => {
                step.classList.add('mb-4', 'pb-4', 'border-bottom');
            });
            
            // AR Visualization button click
            viewArBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const step = parseInt(this.getAttribute('data-step'));
                    currentStep = step;
                    showArVisualization(step);
                    
                    // Add loading animation to button
                    this.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Loading...';
                    this.disabled = true;
                    
                    // Simulate loading time
                    setTimeout(() => {
                        this.innerHTML = '<i class="bi bi-phone"></i> Lihat dalam AR';
                        this.disabled = false;
                    }, 2000);
                });
            });
            
            // Close AR button click
            closeArBtn.addEventListener('click', function() {
                    
                    if (statusBadge.textContent === 'Belum Selesai') {
                        // Mark as complete
                        statusBadge.textContent = 'Selesai';
                        statusBadge.classList.remove('bg-light', 'text-dark');
                        statusBadge.classList.add('bg-success', 'text-white');
                        
                        // Add completion animation and styling
                        step.classList.add('step-completed');
                        step.querySelector('.step-number').classList.add('bg-success');
                        
                        // Update button text and style
                        this.innerHTML = '<i class="bi bi-check2-circle"></i> Completed';
                        this.classList.remove('btn-outline-success');
                        this.classList.add('btn-success');
                        
                        // Progress tracking removed
                        // No confetti animation
                    } else {
                        // Mark as incomplete
                        statusBadge.textContent = 'Belum Selesai';
                        statusBadge.classList.remove('bg-success', 'text-white');
                        statusBadge.classList.add('bg-light', 'text-dark');
                        
                        // Remove completion styling
                        step.classList.remove('step-completed');
                        step.querySelector('.step-number').classList.remove('bg-success');
                        
                        // Reset button text and style
                        this.innerHTML = '<i class="bi bi-check-circle"></i> Mark Complete';
                        this.classList.remove('btn-success');
                        this.classList.add('btn-outline-success');
                        
                        // Progress tracking removed
                    }
                });
            });
            
            // AR View button event listeners
            document.querySelectorAll('.view-ar-btn').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.stopPropagation(); // Prevent event bubbling
                    const stepNumber = this.getAttribute('data-step');
                    const stepTitle = document.querySelector(`.practical-step[data-step="${stepNumber}"] h5`).textContent;
                    
                    // Update AR container with step info
                    document.getElementById('ar-step-number').textContent = stepNumber;
                    document.getElementById('ar-step-title').textContent = stepTitle;
                    
                    // Show AR container, hide instructions
                    document.getElementById('ar-container').classList.remove('d-none');
                    document.getElementById('ar-instructions').classList.add('d-none');
                    
                    // Simulate AR loading (in a real app, this would load actual AR content)
                    setTimeout(function() {
                        // Hide spinner and show a placeholder image/message
                        const arPlaceholder = document.querySelector('.ar-placeholder');
                        arPlaceholder.innerHTML = `
                            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-light rounded-lg">
                                <div class="text-center">
                                    <i class="bi bi-phone-fill text-primary" style="font-size: 3rem;"></i>
                                    <h5 class="mt-3 mb-1">AR View - Step ${stepNumber}</h5>
                                    <p class="text-muted">3D visualization would appear here</p>
                                </div>
                            </div>
                        `;
                    }, 2000);
                });
            });
            
            // AR Navigation buttons
            document.getElementById('prev-ar-step-btn').addEventListener('click', function() {
                const currentStep = parseInt(document.getElementById('ar-step-number').textContent);
                if (currentStep > 1) {
                    navigateAR(currentStep - 1);
                }
            });
            
            document.getElementById('next-ar-step-btn').addEventListener('click', function() {
                const currentStep = parseInt(document.getElementById('ar-step-number').textContent);
                if (currentStep < totalSteps) {
                    navigateAR(currentStep + 1);
                }
            });
            
            document.getElementById('close-ar-btn').addEventListener('click', function() {
                // Hide AR container, show instructions
                document.getElementById('ar-container').classList.add('d-none');
                document.getElementById('ar-instructions').classList.remove('d-none');
            });
            
            // Help button event listeners
            document.querySelectorAll('.step-help-btn').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.stopPropagation(); // Prevent event bubbling
                    const stepNumber = this.getAttribute('data-step');
                    
                    // In a real app, this would show contextual help
                    // For now, we'll use a simple alert
                    alert(`Help for Step ${stepNumber}: Additional guidance would appear here in a modal dialog.`);
                });
            });
            
            // Function to navigate AR steps
            function navigateAR(stepNumber) {
                const step = document.querySelector(`.practical-step[data-step="${stepNumber}"]`);
                const stepTitle = step.querySelector('h5').textContent;
                
                // Update AR container with step info
                document.getElementById('ar-step-number').textContent = stepNumber;
                document.getElementById('ar-step-title').textContent = stepTitle;
                
                // Show loading state
                const arPlaceholder = document.querySelector('.ar-placeholder');
                arPlaceholder.innerHTML = `
                    <div class="position-absolute top-50 start-50 translate-middle text-center">
                        <div class="spinner-grow text-primary" role="status" style="width: 3rem; height: 3rem;">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3 fw-bold">Loading AR for Step ${stepNumber}...</p>
                    </div>
                `;
                
                // Simulate AR loading (in a real app, this would load actual AR content)
                setTimeout(function() {
                    arPlaceholder.innerHTML = `
                        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-light rounded-lg">
                            <div class="text-center">
                                <i class="bi bi-phone-fill text-primary" style="font-size: 3rem;"></i>
                                <h5 class="mt-3 mb-1">AR View - Step ${stepNumber}</h5>
                                <p class="text-muted">3D visualization would appear here</p>
                            </div>
                        </div>
                    `;
                }, 1000);
            }
            
            // Progress tracking has been removed
            
            // Completion tracking functions have been removed
            
            // Expand/Collapse all steps
            document.getElementById('expandAllSteps').addEventListener('click', function() {
                document.querySelectorAll('.step-content').forEach(content => {
                    content.style.display = 'block';
                });
            });
            
            document.getElementById('collapseAllSteps').addEventListener('click', function() {
                document.querySelectorAll('.step-content').forEach(content => {
                    content.style.display = 'none';
                });
            });
            
            // Step headers toggle content
            document.querySelectorAll('.step-header').forEach(header => {
                header.addEventListener('click', function() {
                    const step = this.closest('.practical-step');
                    const content = step.querySelector('.step-content');
                    
                    if (content.style.display === 'none' || content.style.display === '') {
                        content.style.display = 'block';
                        step.classList.add('step-expanded');
                    } else {
                        content.style.display = 'none';
                        step.classList.remove('step-expanded');
                    }
                });
            });
            
            // Function to apply interactive classes to elements
            function applyInteractiveClasses() {
                // Add hover effects to cards
                document.querySelectorAll('.card:not(.interactive-card)').forEach(card => {
                    card.classList.add('interactive-card');
                });
                
                // Add interactive effects to buttons
                document.querySelectorAll('button:not(.interactive-button)').forEach(button => {
                    button.classList.add('interactive-button');
                });
            }
            
            // Apply interactive classes to all elements
            applyInteractiveClasses();
            
            // Call responsive adjustments on load and on resize
            adjustForMobileDevices();
            window.addEventListener('resize', adjustForMobileDevices);
    </script>
